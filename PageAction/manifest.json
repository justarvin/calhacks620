{
"name": "Page Action",
"version": "1.0",
"description": "Shows a page action for urls which have the letter 'g' in them.",

"background": {
"scripts": ["background.js"],
	"persistent": false
},

"page_action" : {
	"default_icon" : "fingerprint.png",
	"default_title" : "There's a 'G' in this URL!",
	"default_popup": "popup.html"
},

"permissions" : [
	    "declarativeContent"
],

"manifest_version": 2
}
